{
  "openapi": "3.0.3",
  "info": {
    "title": "STACFinder API",
    "version": "1.0.0",
    "description": "A STAC-compliant API for browsing and searching SpatioTemporal Asset Catalogs stored in PostgreSQL/PostGIS.",
    "contact": {
      "name": "GeoStacl-Solutions"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Landing page",
        "description": "Returns the API landing page with links to all available endpoints and conformance declarations.",
        "tags": ["Core"],
        "responses": {
          "200": {
            "description": "Landing page",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LandingPage"
                }
              }
            }
          }
        }
      }
    },
    "/conformance": {
      "get": {
        "summary": "Conformance declaration",
        "description": "Returns the list of OGC API and STAC conformance classes that this API implements.",
        "tags": ["Core"],
        "responses": {
          "200": {
            "description": "Conformance declaration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Conformance"
                }
              }
            }
          }
        }
      }
    },
    "/openapi.json": {
      "get": {
        "summary": "OpenAPI specification",
        "description": "Returns the OpenAPI 3.0 specification for this API.",
        "tags": ["Core"],
        "responses": {
          "200": {
            "description": "OpenAPI specification",
            "content": {
              "application/vnd.oai.openapi+json;version=3.0": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/collections": {
      "get": {
        "summary": "List collections",
        "description": "Returns a list of STAC Collections with support for filtering, sorting, and pagination.",
        "tags": ["Collections"],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of collections to return",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 10000,
              "default": 10
            }
          },
          {
            "name": "token",
            "in": "query",
            "description": "Pagination token from previous response",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortby",
            "in": "query",
            "description": "Sort by field(s). Prefix with + for ascending (default) or - for descending. Comma-separated for multiple fields.",
            "schema": {
              "type": "string"
            },
            "example": "+title,-id"
          },
          {
            "name": "q",
            "in": "query",
            "description": "Free-text search across title, description, keywords, license, and providers",
            "schema": {
              "type": "string",
              "maxLength": 200
            }
          },
          {
            "name": "datetime",
            "in": "query",
            "description": "Temporal filter using ISO8601 format (single timestamp, interval with /, or open-ended with ..)",
            "schema": {
              "type": "string"
            },
            "example": "2020-01-01T00:00:00Z/.."
          },
          {
            "name": "bbox",
            "in": "query",
            "description": "Spatial filter as bounding box (minLon,minLat,maxLon,maxLat)",
            "schema": {
              "type": "string"
            },
            "example": "-180,-90,180,90"
          },
          {
            "name": "filter",
            "in": "query",
            "description": "CQL2 filter expression",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter-lang",
            "in": "query",
            "description": "Filter language (cql2-text or cql2-json)",
            "schema": {
              "type": "string",
              "enum": ["cql2-text", "cql2-json"],
              "default": "cql2-text"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of collections",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Collections"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/collections/{id}": {
      "get": {
        "summary": "Get collection by ID",
        "description": "Returns a single STAC Collection by its ID.",
        "tags": ["Collections"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Collection identifier",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "STAC Collection",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Collection"
                }
              }
            }
          },
          "404": {
            "description": "Collection not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/collections/queryables": {
      "get": {
        "summary": "Get queryable fields",
        "description": "Returns the list of fields that can be used in filter expressions.",
        "tags": ["Collections"],
        "responses": {
          "200": {
            "description": "Queryables",
            "content": {
              "application/schema+json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Returns the health status of the API and database connection.",
        "tags": ["Monitoring"],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Health"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LandingPage": {
        "type": "object",
        "required": ["id", "title", "description", "links"],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "conformsTo": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "Conformance": {
        "type": "object",
        "required": ["conformsTo"],
        "properties": {
          "conformsTo": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Collections": {
        "type": "object",
        "required": ["collections", "links"],
        "properties": {
          "collections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Collection"
            }
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "Collection": {
        "type": "object",
        "required": ["id", "type", "stac_version", "description", "license", "extent", "links"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["Collection"]
          },
          "stac_version": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "license": {
            "type": "string"
          },
          "providers": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "extent": {
            "type": "object",
            "required": ["spatial", "temporal"],
            "properties": {
              "spatial": {
                "type": "object",
                "required": ["bbox"],
                "properties": {
                  "bbox": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    }
                  }
                }
              },
              "temporal": {
                "type": "object",
                "required": ["interval"],
                "properties": {
                  "interval": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": ["string", "null"]
                      }
                    }
                  }
                }
              }
            }
          },
          "links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "Link": {
        "type": "object",
        "required": ["rel", "href"],
        "properties": {
          "rel": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "Health": {
        "type": "object",
        "required": ["status", "api", "database", "timestamp"],
        "properties": {
          "status": {
            "type": "string",
            "enum": ["ok", "degraded"]
          },
          "api": {
            "type": "string",
            "enum": ["up"]
          },
          "database": {
            "type": "string",
            "enum": ["up", "down"]
          },
          "target": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "port": {
                "type": "string"
              },
              "database": {
                "type": "string"
              }
            }
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error", "message"],
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Core",
      "description": "Core API endpoints"
    },
    {
      "name": "Collections",
      "description": "STAC Collections endpoints"
    },
    {
      "name": "Monitoring",
      "description": "Health and monitoring endpoints"
    }
  ]
}